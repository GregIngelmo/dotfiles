# Cusom Colors
[color]
	ui = true
[color "diff"]
	plain = normal
	meta = blue 
	frag = white bold
	old = red bold
	new = green bold
	commit = blue
    whitespace = normal 
[color "branch"]
	current = green bold reverse
	local = normal
	remote = yellow bold
	plain = normal
[color "status"]
	header = normal
	added = cyan bold
	updated = green bold
	changed = yellow bold
	untracked = red bold
	nobranch = red bold
[color "grep"]
	match = normal
[color "interactive"]
	prompt = normal
	header = normal
	help = normal
	error = normal   

[apply]
	whitespace = nowarn

[core]
	excludesfile = ~/.gitignore

# The include directive requires git 7.10 or greater otherwise it's ignored.
[include]
    path = .gitconfig.local
[web]
	browser = open

[alias]
    localcommits = !git fetch && git --no-pager log --pretty=format:'- %h %s (%cn)' origin/HEAD..HEAD
    origcommits = !git fetch && git --no-pager log --pretty=format:'- %h %s (%cn, %ar)' HEAD..origin/HEAD

[url "git@github.com:"]
	insteadOf = https://github.com/

[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
